<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter"
            type="pjo.travelapp.presentation.adapter.AiChatAdapter" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_maps_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.ui.activity.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fcv_main"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:navGraph="@navigation/navigation" />

            <pjo.travelapp.presentation.util.customview.DraggableConstraintLayout
                android:id="@+id/cl_animator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="60dp"
                app:layout_constraintBottom_toTopOf="@+id/cnb_item"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_floating_ai_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/lav_floating_ai_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lav_floating_ai_button" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lav_floating_ai_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/animation_ai_robot" />

            </pjo.travelapp.presentation.util.customview.DraggableConstraintLayout>

            <com.ismaeldivita.chipnavigation.ChipNavigationBar
                android:id="@+id/cnb_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_navigation_height"
                android:background="@color/white"
                android:elevation="3dp"
                android:padding="4dp"
                app:cnb_iconSize="20sp"
                app:cnb_menuResource="@menu/menu_bottom"
                app:cnb_orientationMode="horizontal"
                app:cnb_radius="50dp"
                app:cnb_unselectedColor="@color/dark_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom_sheet_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_solid_corner"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/bottom_sheet_ai_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ai_chat"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:adapter="@{adapter}"
                android:background="@color/gray"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/et_submit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottom_sheet_ai_chat"
                tools:listitem="@layout/ai_chat_item" />

            <EditText
                android:id="@+id/et_submit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="@string/ai_chat"
                android:minHeight="40dp"
                android:paddingStart="5dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_gray"
                android:textSize="20sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_send"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_send"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_send_btn"
                android:minHeight="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/et_submit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_submit_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>