<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="place"
            type="pjo.travelapp.data.entity.PlaceResult" />

        <variable
            name="pagerAdapter"
            type="pjo.travelapp.presentation.adapter.ImageViewPagerAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom_sheet_container"
        style="@style/AppModalBorder20WhiteStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="false"
        app:behavior_peekHeight="32dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:context=".presentation.ui.fragment.MapsBottomSheetFragment">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/bottom_sheet_dragger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_cotainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_dragger">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fl_viewpager_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:adapter="@{pagerAdapter}"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                    <View
                        android:id="@+id/v_top_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_images_size"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_dark_gray_corner_7"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_maps_bottom_sheet_main_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fl_viewpager_container">

                    <TextView
                        android:id="@+id/tv_store_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:text="@{place.name}"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tv_store_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:text="@{place.types[0]}"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_rating_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rating_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{place.rating}"
                            android:textSize="18sp" />

                        <RatingBar
                            android:id="@+id/rb_score"
                            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:indeterminate="false"
                            android:numStars="5"
                            android:progressTint="@color/yellow"
                            android:rating="@{place.rating}"
                            android:stepSize="0.5"
                            android:transformPivotX="0dp"
                            android:transformPivotY="25dp" />
                    </LinearLayout>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tl_maps_info"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:paddingBottom="5dp"
                        app:tabIconTint="@null"
                        app:tabIndicatorColor="@color/blue"
                        app:tabIndicatorHeight="4dp"
                        app:tabRippleColor="@color/white"
                        app:tabSelectedTextColor="@color/blue"
                        app:tabTextAppearance="@style/tabTextSizeBold"
                        app:tabTextColor="@color/dark_gray">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/overview" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/review" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info" />

                    </com.google.android.material.tabs.TabLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/ll_info_icon_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_tab_container1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_icon_container1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_maps_icon_tab_full"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/ib_icon1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:importantForAccessibility="no"
                                    android:src="@drawable/ic_route_color"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/route"
                                android:textColor="@color/blue"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/cl_icon_container1" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_tab_container2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_icon_container2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_maps_icon_tab_corner"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/ib_icon2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:importantForAccessibility="no"
                                    android:src="@drawable/ic_bookmark_color"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/save"
                                android:textColor="@color/blue"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/cl_icon_container2" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_tab_container3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_icon_container3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_maps_icon_tab_corner"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/ib_icon3"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:importantForAccessibility="no"
                                    android:src="@drawable/ic_location_my_way_color"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/around"
                                android:textColor="@color/blue"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/cl_icon_container3" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_tab_container5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_icon_container5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_maps_icon_tab_corner"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/ib_icon5"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:importantForAccessibility="no"
                                    android:src="@drawable/ic_share_color"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/share"
                                android:textColor="@color/blue"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/cl_icon_container5" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/ll_place_info_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            app:hideViewForTextNullOrEmpty="@{place.vicinity}">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:importantForAccessibility="no"
                                android:src="@drawable/ic_single_location_color" />

                            <TextView
                                android:id="@+id/tv_maps_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{place.vicinity}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            app:hideViewForTextNullOrEmpty="@{place.website}">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:importantForAccessibility="no"
                                android:src="@drawable/ic_world_color" />

                            <TextView
                                android:id="@+id/tv_maps_website"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@{place.website}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            app:hideViewForTextNullOrEmpty="@{place.formattedPhoneNumber}">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:importantForAccessibility="no"
                                android:src="@drawable/ic_call_color" />

                            <TextView
                                android:id="@+id/tv_call_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:text="@{place.formattedPhoneNumber}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:hideViewForTextNullOrEmpty="@{place.openingHours.weekdayText[0]}">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:importantForAccessibility="no"
                                android:src="@drawable/ic_time_color" />

                            <TextView
                                android:id="@+id/tv_open_close_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                app:openCloseStatus="@{place.openingHours.openNow}" />

                            <TextView
                                android:id="@+id/tv_open_close_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                app:allWeekdayInfo="@{place.openingHours.weekdayText}" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>