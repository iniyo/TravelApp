<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.fragment.RecycleItemFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="adapter"
            type="pjo.travelapp.presentation.adapter.MorePlaceRecyclerAdapter" />

        <variable
            name="title"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_country_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@{title}"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_more_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:adapter="@{adapter}"
            app:layout_constraintTop_toBottomOf="@+id/tv_country_title"
            tools:listitem="@layout/rv_more_places_item" />

        <ProgressBar
            android:id="@+id/pb_popular_more"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/rv_more_places"
            app:layout_constraintStart_toStartOf="@+id/rv_more_places"
            app:layout_constraintTop_toTopOf="@+id/rv_more_places" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>