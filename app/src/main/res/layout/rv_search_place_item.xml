<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_search_place_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_little_place_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/intro_pic"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView.50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/title"
        android:textColor="@color/dark_blue"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/siv_little_place_pic"
        app:layout_constraintTop_toTopOf="@+id/siv_little_place_pic" />

    <TextView
        android:id="@+id/tv_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/siv_little_place_pic"
        app:layout_constraintStart_toStartOf="@+id/tv_place_name" />

    <TextView
        android:id="@+id/tv_spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_place_type"
        app:layout_constraintStart_toEndOf="@+id/tv_place_type"
        app:layout_constraintTop_toTopOf="@+id/tv_place_type" />

</androidx.constraintlayout.widget.ConstraintLayout>