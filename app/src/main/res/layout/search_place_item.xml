<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_search_place_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/iv_little_place_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/intro_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="시부야 역"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_little_place_pic"
        app:layout_constraintTop_toTopOf="@+id/iv_little_place_pic" />

    <TextView
        android:id="@+id/tv_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관광명소"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_little_place_pic"
        app:layout_constraintStart_toStartOf="@+id/tv_place_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_place_name" />


    <TextView
        android:id="@+id/tv_spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="/ 시부야"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_place_type"
        app:layout_constraintStart_toEndOf="@+id/tv_place_type"
        app:layout_constraintTop_toTopOf="@+id/tv_place_type" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_choose"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_gray_solid_corner"
        android:text="선택"
        app:layout_constraintBottom_toBottomOf="@+id/iv_little_place_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_little_place_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>