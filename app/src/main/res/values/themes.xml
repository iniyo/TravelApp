<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TravelApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.TravelApp" parent="Base.Theme.TravelApp" />


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <style name="CheckFragmentToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@color/dark_gray</item>
    </style>

    <!-- button -->
    <style name="calendar_fragment_button_theme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/light_blue</item>
    </style>

    <style name="default_button_theme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="background">@drawable/bg_blue_solid_corner</item>
    </style>

    <!-- rolling textview attr -->
    <declare-styleable name="RollingTextView">
        <attr name="duration" format="integer" />
    </declare-styleable>
</resources>